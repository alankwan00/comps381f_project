<!--restaurantUpdate.ejs-->

<HTML>
  <body>
    <h1>Update Restaurant</h1>
    <p><a href="/restaurant/display/details?restaurantID=<%= restaurants[0].restaurantID %>">Go back to restaurant details</a></p>
    <% if (restaurants[0].photo != "" && typeof restaurants[0].photo != "undefined" &&  restaurants[0].photoMimetype.includes("image/")) { 
     %>
    <img src="data:<%= restaurants[0].photoMimetype %>;base64,<%= restaurants[0].photo %>" height='200'/>
    <% } else { %>
    <br/><p>No photo provided</p><br/>
    <% } %>
     <form action="/restaurant/update/submit" method="post" enctype="multipart/form-data">
	  <table>
	    <input name="_id" type="text" value="<%= restaurants[0]._id %>" hidden>
    	<tr>
        <td><label>Restaurant ID :</label></td>
        <td></td>
        <td><%= restaurants[0].restaurantID %><input name="restaurantID" type="text" value="<%= restaurants[0].restaurantID %>" hidden readonly></td>
      </tr>
  <tr>
  <td><label>Name :</label></td>
  <td></td>
  <td><input name="name" type="text" value="<%= restaurants[0].name %>" required></td>
</tr>
<tr>
<td><label>Borough :</label></td>
<td></td>
<td><input name="borough" type="text" value="<%= restaurants[0].borough %>"></td>
</tr>
  <tr>
  <td><label>Cuisine :</label></td>
  <td></td>
  <td><input name="cuisine" type="text" value="<%= restaurants[0].cuisine %>"></td>
</tr>
<tr>
<td><label>Photo :</label></td>
<td></td>
<td><input name="photo" type="file" value="<%= restaurants[0].photo %>">Uploaded photo will replace the original photo</td>
</tr>
<tr>
  <td>Address</td>
<td><label>- Street :</label></td>
<td><input name="street" type="text" value="<%= restaurants[0].address.street %>"></td>
</tr>
<tr>
  <td></td>
<td><label>- Building :</label></td>
<td><input name="building" type="text" value="<%= restaurants[0].address.building %>"></td>
</tr>
<tr>
  <td></td>
<td><label>- Zipcode :</label></td>
<td><input name="zipcode" type="text" value="<%= restaurants[0].address.zipcode %>"></td>
</tr>
<tr>
  <td></td>
<td><label>- Coord :</label></td>
<td>[ <input name="coord_lon" type="number" value="<%= restaurants[0].address.coord[0] %>"  step="0.000000001"> , <input name="coord_lat" type="number" value="<%= restaurants[0].address.coord[1] %>" step="0.000000001"> ]</td>
</tr>
</table>
<br/>
<% if (restaurants[0].grades.length > 0) {%>
      <table>
        <tr><td>Grades :</td><td>#</td><td>User</td><td>Score</td></tr>
          <% for(var i = 0;i < restaurants[0].grades.length;i++) {%>
          <tr>
            <td></td>
            <td><%= i + 1 %>. </td>
        <td><%= restaurants[0].grades[i].user %></td>
        <td>(<%= restaurants[0].grades[i].score %> / 10)</td>
        </tr>
        <% } %>
      </table>
      <% } else { %>
        <table>
          <tr>
            <td>Grades :</td>
          </tr>
        </table>
      <% } %>
      <br/>
      <table>
<tr>
<td><label>Owner :</label></td>
<td></td>
<td><%= restaurants[0].owner %> <input name="owner" type="text" value="<%= restaurants[0].owner %>" hidden readonly></td>
</tr>
</table>
<input type="submit" value="Update">
</form>
  </body>
</HTML>
