<!--restaurantsCreate.ejs-->

<HTML>
  <body>
    <h1>Create New Restaurant</h1>
    <a href="/restaurant/display/all"><p>Go back to restaurant list</p></a>
     <form action="/restaurant/create/submit" method="post" enctype="multipart/form-data">
	  <table>
    	<tr>
    	 <td><label>Restaurant ID :</label></td>
    	 <td></td>
        <td>The restaurant ID will generate automatically<input name="restaurantid" type="text" hidden readonly></td>
      </tr>
  <tr>
  <td><label>Name :</label></td>
    <td></td>
  <td><input name="name" type="text" required></td>
</tr>
<tr>
<td><label>Borough :</label></td>
  <td></td>
<td><input name="borough" type="text"></td>
</tr>
  <tr>
  <td><label>Cuisine :</label></td>
    <td></td>
  <td><input name="cuisine" type="text"></td>
</tr>
<tr>
<td><label>Photo :</label></td>
  <td></td>
<td><input name="photo" type="file"></td>
</tr>
<tr>
  <td>Address</td>
<td><label>- Street :</label></td>
<td><input name="street" type="text"></td>
</tr>
<tr>
  <td></td>
<td><label>- Building :</label></td>
<td><input name="building" type="text"></td>
</tr>
<tr>
  <td></td>
<td><label>- Zipcode :</label></td>
<td><input name="zipcode" type="text"></td>
</tr>
<tr>
  <td></td>
<td><label>- Coord :</label></td>
<td>[ <input name="coord_lon" type="number" min="-180" max="180" step="0.0001"> , <input name="coord_lat" type="number" min="-90" max="90" step="0.0001"> ]</td>
</tr>
<tr>
  <td>Owner :</td>
  <td></td>
<td><input name="owner" type="text" value="<%= owner %>" required readonly></td>
</tr>
</table>
<input type="submit" value="Create">
</form>
  </body>
</HTML>
